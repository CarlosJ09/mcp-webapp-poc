# Environment variables template for frontend
# Copy this file to .env.local and configure your values

# MCP Server Configuration
NEXT_PUBLIC_MCP_SERVER_HOST=http://localhost:3000/mcp
NEXT_PUBLIC_MCP_PROTOCOL_VERSION=2024-11-05

# Application Configuration
NEXT_PUBLIC_APP_NAME=MCP Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENVIRONMENT=development

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_RECONNECT_ATTEMPTS=3
NEXT_PUBLIC_RECONNECT_DELAY=5000

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Performance Configuration
NEXT_PUBLIC_CHART_ANIMATION_DURATION=1000
NEXT_PUBLIC_DATA_REFRESH_INTERVAL=30000

# Development Configuration
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
